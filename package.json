{
  "name": "auth-portal",
  "version": "1.0.0",
  "description": "Central Access Managment Service",
  "main": "dist/index.js",
  "scripts": {
    "start:production": "node dist/index.js",
    "start": "pnpm build && node dist/index.js",
    "build": "esbuild src/index.ts --sourcemap --platform=node --bundle --minify --outfile=dist/index.js",
    "dev": "nodemon --watch 'src/**' --ext 'ts,js,json,mjs' --exec \"pnpm build && pnpm start\"",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint . --color --cache -f friendly --max-warnings 10",
    "lint:fix": "eslint . --color --cache -f friendly --max-warnings 10 --fix"
  },
  "keywords": [],
  "author": "Joe Ma <rikkaneko23@gmail.com>",
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.2",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "esbuild": "^0.21.4",
    "eslint": "~8.57.0",
    "eslint-formatter-friendly": "^7.0.0",
    "nodemon": "^3.1.3",
    "prettier": "^3.3.1",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@azure/msal-node": "^2.9.2",
    "body-parser": "^1.20.2",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-session": "^1.18.0",
    "express-validator": "^7.1.0",
    "google-auth-library": "^9.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.7.0",
    "mongoose": "^8.4.3"
  }
}